<div id="CaptchatModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 class="modal-title text-info">Vui lòng nhập mã xác nhận</h3>
        </div>
                <div class="modal-body form-horizontal">
                <div id="alertCaptcha" class="alert alert-danger collapse">Nhập mã xác nhận chưa chính xác!</div>
                <script type="text/javascript">
                    var RecaptchaOptions = {
                        theme: 'custom',
                        custom_theme_widget: 'recaptcha_widget'
                    };
            </script>
                <div id="recaptcha_widget" style="display:none">
                <div class="form-group row">
                    <div class="control-label col-lg-4" title="Lấy mã xác nhận khác"><i onclick="javascript:Recaptcha.reload()" class="reload-captcha pointer"></i></div>
                    <div class="col-lg-8" style="margin: auto; border: 1px solid red;float:left;width: 350px !important; height: 100px;">
                        <div id="recaptcha_image" ><!-- --></div>
                    </div>
                    <div class="recaptcha_only_if_incorrect_sol" style="color:red">Mã xác nhận không đúng!</div>
                </div>
                <div class="form-group row">
                    <span class="recaptcha_only_if_image control-label col-lg-4 text-bold">Nhập mã xác nhận:</span>
                    <span class="col-lg-8 col-md-8 col-sm-8 col-xs-8" style="padding-left: 0 !important;">
                        <input type="text" id="recaptcha_response_field" name="recaptcha_response_field" class="form-control" />
                    </span>
                </div>

                @*<div  class="form-group"><a class="control-label col-lg-4" href="javascript:Recaptcha.reload()">Lấy mã xác nhận khác</a></div>*@
                <div class="recaptcha_only_if_audio form-group"><a class="control-label col-lg-4" href="javascript:Recaptcha.switch_type('image')">Get an image CAPTCHA</a></div>

                </div>

                <script type="text/javascript" src="http://www.google.com/recaptcha/api/challenge?k=6LcIQeASAAAAAPnEp9Pg8M0CAXTzeJ67WauvcTHf"></script>
                <noscript>
                <iframe src="http://www.google.com/recaptcha/api/noscript?k=6LcIQeASAAAAAPnEp9Pg8M0CAXTzeJ67WauvcTHf" height="300" width="500" frameborder="0"></iframe><br />
                <textarea name="recaptcha_challenge_field" rows="3" cols="40" id="recaptcha_challenge_field">
                </textarea>
                <input type="hidden" name="recaptcha_response_field" value="manual_challenge">
                </noscript>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">Đóng</button>
                <button type="button" class="btn btn-warning" id="ModalUpdate">Xác nhận</button>
            </div>
        </div>
    </div>
</div>