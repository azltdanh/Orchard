@model RealEstate.FrontEnd.ViewModels.PropertyFrontEndEditViewModel
@{
    Style.Require("BootstrapCombobox");
    Script.Require("BootstrapCombobox");
    Script.Require("FrontEnd.Property.Edit");
    Style.Require("jQueryUI_Orchard");
    Script.Require("jQueryUI_DatePicker");
    bool IsDisabled = (Model.StatusCssClass == "st-approved" && Model.IsAdsVIP && !Model.IsRefresh) ? true : false;
    int UserId = WorkContext.CurrentUser.Id;
}
<script type="text/javascript">
    var unitPriceArray = [@string.Join(",", Model.UnitArray)]
</script>
<span id="Id" class="hide">@Model.Id</span>

<!-- form-editor -->
<div class="form-editor">

    <!-- Loại BĐS -->
    <article class="content-item">
        <header>
            <div class="header-wrapper">
                <div class="header-title">
                    <div class="header-title-left">
                        <div class="header-title-triangle"></div>
                    </div>
                    <h2 class="header-title-text">Loại giao dịch</h2>
                    <div class="header-title-right"></div>
                </div>
                <div class="header-msg text-ellipsis">
                    <span class="text-success">Các mục có dấu (<span class="text-error">*</span>) là bắt buộc nhập</span>
                </div>
            </div>
        </header>
        <article>
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-lg-4 col-md-4 col-sm-4"><span class="text-error">*</span> Loại giao dịch:</label>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        @Html.DropDownListFor(m => m.AdsTypeCssClass,
                        Model.AdsTypes.Select(s => new SelectListItem
                        {
                            Selected = s.CssClass == Model.AdsTypeCssClass,
                            Text = s.Name,
                            Value = s.CssClass
                        }), new { Class = "form-control", required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-4 col-md-4 col-sm-4"><span class="text-error">*</span> Nhóm BĐS:</label>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        @Html.DropDownListFor(m => m.TypeGroupCssClass,
                        Model.TypeGroups.Select(s => new SelectListItem
                        {
                            Selected = s.CssClass == Model.TypeGroupCssClass,
                            Text = s.Name,
                            Value = s.CssClass
                        }), new { Class = "form-control", required = "required" })
                        <span id="CurrentTypeGroupCssClass" class="hide">@Model.TypeGroupCssClass</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-4 col-md-4 col-sm-4"><span class="text-error">*</span> Loại BĐS:</label>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        @Html.DropDownListFor(m => m.TypeId,
                        Model.Types.Select(s => new SelectListItem
                        {
                            Selected = s.Id == Model.TypeId,
                            Text = s.Name,
                            Value = s.Id.ToString()
                        }), new { Class = "form-control", required = "required" })
                    </div>
                </div>
            </div>
        </article>
    </article>

    <!-- Địa chỉ -->
    <article class="content-item">
        <header>
            <div class="header-wrapper">
                <div class="header-title">
                    <div class="header-title-left">
                        <div class="header-title-triangle"></div>
                    </div>
                    <h2 class="header-title-text">Địa chỉ</h2>
                    <div class="header-title-right"></div>
                </div>
                <div class="header-msg text-ellipsis">
                    <span class="text-success">Các mục có dấu (<span class="text-error">*</span>) là bắt buộc nhập</span>
                </div>
            </div>
        </header>
        <article>
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-lg-4 col-md-4 col-sm-4"><span class="text-error">*</span> Tỉnh / Thành Phố:</label>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        @Html.DropDownListFor(m => m.ProvinceId,
                        Model.Provinces.Select(s => new SelectListItem
                        {
                            Selected = s.Id == Model.ProvinceId,
                            Text = s.Name,
                            Value = s.Id.ToString()
                        }), "-- Tỉnh / Thành Phố --", new { Class = "form-control combobox", placeholder = "-- Tỉnh / Thành Phố --", required = "required" })
                        @Html.ValidationMessageFor(m => m.ProvinceId, "*")
                        <label for="autocompleteProvinceId" class="text-error collapse"></label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-4 col-md-4 col-sm-4"><span class="text-error">*</span> Quận / Huyện:</label>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        @Html.DropDownListFor(m => m.DistrictId,
                        Model.Districts.Select(s => new SelectListItem
                        {
                            Selected = s.Id == Model.DistrictId,
                            Text = s.Name,
                            Value = s.Id.ToString()
                        }), "-- Quận / Huyện --", new { Class = "form-control combobox", placeholder = "-- Quận / Huyện --", required = "required" })
                        @Html.ValidationMessageFor(m => m.DistrictId, "*")
                        <label for="autocompleteDistrictId" class="text-error collapse"></label>
                    </div>
                </div>

                @if (Model.TypeGroupCssClass == "gp-apartment")
                {
                    <div class="form-group">
                        <label class="control-label col-lg-4 col-md-4 col-sm-4"> Tên dự án / chung cư:</label>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.DropDownListFor(m => m.ApartmentId,
                             Model.Apartments.Select(s => new SelectListItem
                             {
                                 Selected = s.Id == Model.ApartmentId,
                                 Text = s.Name,
                                 Value = s.Id.ToString()
                             }), "-- Vui lòng chọn --", new { @class = "form-control combobox" })
                            @Html.ValidationMessageFor(m => m.ApartmentId, "*")

                            @Html.TextBoxFor(m => m.OtherProjectName, new { maxlength = 250, @class = "form-control", style = "display:none;" })
                            @Html.ValidationMessageFor(m => m.OtherProjectName, "*")
                            <label for="autocompleteApartmentId" class="text-error collapse"></label>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 form-inline">
                            <label class="checkbox checkbok-different">@Html.CheckBoxFor(m => m.ChkOtherProjectName, new { tabindex = "-1" }) Khác</label>
                            <input type="hidden" id="oldAprartmentId" value="@Model.ApartmentId" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-4 col-md-4 col-sm-4">Phường / Xã:</label>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.DropDownListFor(m => m.WardId,
                            Model.Wards.Select(s => new SelectListItem
                            {
                                Selected = s.Id == Model.WardId,
                                Text = s.Name,
                                Value = s.Id.ToString()
                            }), "-- Phường / Xã --", new { Class = "form-control combobox", placeholder = "-- Phường / Xã --" })
                            @Html.ValidationMessageFor(m => m.WardId, "*")
                            @Html.TextBoxFor(m => m.OtherWardName, new { maxlength = 250, Class = "form-control", style = "display:none;" })
                            @Html.ValidationMessageFor(m => m.OtherWardName, "*")
                            <label for="autocompleteWardId" class="text-error collapse"></label>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 form-inline">
                            <label class="checkbox checkbok-different">@Html.CheckBoxFor(m => m.ChkOtherWardName, new { tabindex = "-1" }) Phường / Xã khác</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-4 col-md-4 col-sm-4">Đường / Phố:</label>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.DropDownListFor(m => m.StreetId,
                            Model.Streets.Select(s => new SelectListItem
                            {
                                Selected = s.Id == Model.StreetId,
                                Text = s.Name,
                                Value = s.Id.ToString()
                            }), "-- Đường / Phố --", new { Class = "form-control combobox", placeholder = "-- Đường / Phố --" })
                            @Html.ValidationMessageFor(m => m.StreetId, "*")
                            @Html.TextBoxFor(m => m.OtherStreetName, new { maxlength = 250, Class = "form-control", style = "display:none;" })
                            @Html.ValidationMessageFor(m => m.OtherStreetName, "*")
                            <label for="autocompleteStreetId" class="text-error collapse"></label>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 form-inline">
                            <label class="checkbox checkbok-different">@Html.CheckBoxFor(m => m.ChkOtherStreetName, new { tabindex = "-1" }) Đường / Phố khác</label>
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="control-label col-lg-4 col-md-4 col-sm-4"> Phường / Xã:</label>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.DropDownListFor(m => m.WardId,
                            Model.Wards.Select(s => new SelectListItem
                            {
                                Selected = s.Id == Model.WardId,
                                Text = s.Name,
                                Value = s.Id.ToString()
                            }), "-- Phường / Xã --", new { Class = "form-control combobox", placeholder = "-- Phường / Xã --" })
                            @Html.ValidationMessageFor(m => m.WardId, "*")
                            @Html.TextBoxFor(m => m.OtherWardName, new { maxlength = 250, Class = "form-control", style = "display:none;" })
                            @Html.ValidationMessageFor(m => m.OtherWardName, "*")
                            <label for="autocompleteWardId" class="text-error collapse"></label>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 form-inline">
                            <label class="checkbox checkbok-different">@Html.CheckBoxFor(m => m.ChkOtherWardName, new { tabindex = "-1" }) Phường / Xã khác</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-4 col-md-4 col-sm-4"> Đường / Phố:</label>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.DropDownListFor(m => m.StreetId,
                            Model.Streets.Select(s => new SelectListItem
                            {
                                Selected = s.Id == Model.StreetId,
                                Text = s.Name,
                                Value = s.Id.ToString()
                            }), "-- Đường / Phố --", new { Class = "form-control combobox", placeholder = "-- Đường / Phố --" })
                            @Html.ValidationMessageFor(m => m.StreetId, "*")
                            @Html.TextBoxFor(m => m.OtherStreetName, new { maxlength = 250, Class = "form-control", style = "display:none;" })
                            @Html.ValidationMessageFor(m => m.OtherStreetName, "*")
                            <label for="autocompleteStreetId" class="text-error collapse"></label>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 form-inline">
                            <label class="checkbox checkbok-different">@Html.CheckBoxFor(m => m.ChkOtherStreetName, new { tabindex = "-1" }) Đường / Phố khác</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-4 col-md-4 col-sm-4">Tên dự án:</label>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.TextBoxFor(m => m.OtherProjectName, new { maxlength = 250, Class = "form-control" })
                        </div>
                    </div>
                }

                <div class="form-group">
                    <label class="control-label col-lg-4 col-md-4 col-sm-4">
                        @if (Model.TypeGroupCssClass == "gp-apartment")
                        {<text>Số nhà / ĐC chung cư:</text>}
                        else if (Model.TypeGroupCssClass == "gp-land")
                        {<text>Số nhà / lô, thửa:</text>}
                        else
                        {<text>Số nhà:</text>}
                        <i class="icon_silk_help guide-help pointer" data-help="addresscorner" title="Click vào để xem hình hướng dẫn"></i>
                    </label>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        @Html.TextBoxFor(m => m.AddressNumber, new { maxlength = 250, Class = "form-control" })
                    </div>
                </div>
                <div class="form-group" style="display:none;">
                    <label class="control-label col-lg-4 col-md-4 col-sm-4">Số Ngõ / Ngách: <i class="icon_silk_help guide-help pointer" data-help="addresscorner" title="Click vào để xem hình hướng dẫn"></i></label>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        @Html.TextBoxFor(m => m.AddressCorner, new { maxlength = 250, Class = "form-control" })
                    </div>
                </div>
                @if (Model.TypeGroupCssClass == "gp-apartment")
                {
                    <div class="form-group">
                        <label class="control-label col-lg-4 col-md-4 col-sm-4">Mã số căn hộ:</label>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            @Html.TextBoxFor(m => m.ApartmentNumber, new { maxlength = 250, Class = "form-control" })
                        </div>
                    </div>
                }
                <div class="form-group">
                    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 form-inline">
                        <label class="checkbox">@Html.CheckBoxFor(m => m.UnPublishAddress) Ẩn số nhà khi đăng tin</label>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </article>
    </article>

    <!-- Vị trí -->
    <article class="content-item">
        <header>
            <div class="header-wrapper">
                <div class="header-title">
                    <div class="header-title-left">
                        <div class="header-title-triangle"></div>
                    </div>
                    <h2 class="header-title-text">Vị trí</h2>
                    <div class="header-title-right"></div>
                </div>
                <div class="header-msg text-ellipsis">
                    <span class="text-success">Các mục có dấu (<span class="text-error">*</span>) là bắt buộc nhập</span>
                </div>
            </div>
        </header>
        <article>
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-lg-6 col-md-6 col-sm-6">Hướng của BĐS:</label>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                @Html.DropDownListFor(m => m.DirectionId,
                                Model.Directions.Select(s => new SelectListItem
                                {
                                    Selected = s.Id == Model.DirectionId,
                                    Text = s.Name,
                                    Value = s.Id.ToString()
                                }), "-- Vui lòng chọn --", new { Class = "form-control" })
                                @Html.ValidationMessageFor(m => m.DirectionId, "*")
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-6 col-md-6 col-sm-6">Giấy tờ pháp lý:</label>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                @Html.DropDownListFor(m => m.LegalStatusId,
                                Model.LegalStatus.Select(s => new SelectListItem
                                {
                                    Selected = s.Id == Model.LegalStatusId,
                                    Text = s.Name,
                                    Value = s.Id.ToString()
                                }), "-- Vui lòng chọn --", new { Class = "form-control" })
                                @Html.ValidationMessageFor(m => m.LegalStatusId, "*")
                            </div>
                        </div>
                        @if (Model.TypeGroupCssClass == "gp-house" || Model.TypeGroupCssClass == "gp-land")
                        {
                            <div class="form-group">
                                <label class="control-label col-lg-6 col-md-6 col-sm-6"><span class="text-error">*</span> Vị trí BĐS:</label>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    @Html.DropDownListFor(m => m.LocationCssClass,
                                    Model.Locations.Select(s => new SelectListItem
                                    {
                                        Selected = s.CssClass == Model.LocationCssClass,
                                        Text = s.Name,
                                        Value = s.CssClass
                                    }), "-- Vui lòng chọn --", new { Class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(m => m.LocationCssClass, "*")
                                </div>
                            </div>
                            <div class="form-group collapse" id="divStreetWidth">
                                <label class="control-label col-lg-9 col-md-9 col-sm-9">Độ rộng đường trước nhà:</label>
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.StreetWidth, new { Class = "form-control AutoFloat3" })
                                        <span class="input-group-addon">m</span>
                                    </div>
                                    @Html.ValidationMessageFor(m => m.StreetWidth, "*")
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 hidden-xs">
                    <div class="collapse" id="divAlleyWidth11">
                        <div class="text-success"><strong class="text-error">Lưu ý:</strong> Thay đổi số lần rẽ, khoảng cách, hoặc độ rộng hẻm kết quả định giá sẽ thay đổi rất nhiều.</div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            @if (Model.TypeGroupCssClass == "gp-house" || Model.TypeGroupCssClass == "gp-land")
            {
                <div class="form-horizontal">
                    <div id="divDistanceToStreet">
                        <div class="form-group estiametion-mode collapse">
                            <label class="control-label col-lg-6 col-md-6 col-sm-6"><span class="text-error">*</span> Khoảng cách từ BĐS ra MT đường:</label>
                            <div class="col-lg-2 col-md-2 col-sm-2">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.DistanceToStreet, new { Class = "form-control AutoFloat4", required = "required" })
                                    <span class="input-group-addon">m</span>
                                </div>
                                @Html.ValidationMessageFor(m => m.DistanceToStreet, "*")
                                <label for="DistanceToStreet" class="text-error collapse">Vui lòng nhập</label>
                            </div>
                        </div>
                    </div>
                    <div id="divAlleyTurns">
                        <div class="form-group estiametion-mode collapse">
                            <label class="control-label col-lg-6 col-md-6 col-sm-6"><span class="text-error">*</span> Số lần rẽ (quẹo) từ MT đường vào đến BĐS: <i class="icon_silk_help guide-help pointer" data-help="maphelp" title="Click vào để xem hình hướng dẫn"></i></label>
                            <div class="col-lg-2 col-md-2 col-sm-2">
                                @Html.TextBoxFor(m => m.AlleyTurns, new { Class = "form-control AutoInt2", required = "required" })
                                @Html.ValidationMessageFor(m => m.AlleyTurns, "*")
                                <label for="AlleyTurns" class="text-error collapse">Vui lòng nhập</label>
                            </div>
                        </div>
                    </div>
                    <div id="divAlleyWidth10">
                        <div class="form-group estiametion-mode collapse">
                            <label class="control-label text-info col-lg-8 col-md-8 col-sm-8 col-xs-12"><strong>Nhập độ rộng các hẻm từ Mặt tiền(MT) đường vào đến BĐS:</strong></label>
                        </div>
                    </div>

                    <!-- Lần rẽ thứ nhất (Hẻm đầu tiên) rộng: -->
                    <div class="form-group collapse" id="divAlleyWidth1">
                        <label class="control-label col-lg-6 col-md-6 col-sm-6" id="lbAlleyWidth1">Hẻm rộng:</label>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.AlleyWidth1, new { Class = "form-control AutoFloat3" })
                                <span class="input-group-addon">m</span>
                            </div>
                            @Html.ValidationMessageFor(m => m.AlleyWidth1, "*")
                            <label for="AlleyWidth1" class="text-error collapse">Vui lòng nhập</label>
                        </div>
                    </div>
                    <div class="form-group collapse estiametion-mode" id="divAlleyWidth2">
                        <label class="control-label col-lg-6 col-md-6 col-sm-6"><span class="text-error">*</span> Lần rẽ thứ 2 rộng:</label>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.AlleyWidth2, new { Class = "form-control AutoFloat3", required = "required" })
                                <span class="input-group-addon">m</span>
                            </div>
                            @Html.ValidationMessageFor(m => m.AlleyWidth2, "*")
                            <label for="AlleyWidth2" class="text-error collapse">Vui lòng nhập</label>
                        </div>
                    </div>
                    <div class="form-group collapse estiametion-mode" id="divAlleyWidth3">
                        <label class="control-label col-lg-6 col-md-6 col-sm-6"><span class="text-error">*</span> Lần rẽ thứ 3 rộng:</label>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.AlleyWidth3, new { Class = "form-control AutoFloat3", required = "required" })
                                <span class="input-group-addon">m</span>
                            </div>
                            @Html.ValidationMessageFor(m => m.AlleyWidth3, "*")
                            <label for="AlleyWidth3" class="text-error collapse">Vui lòng nhập</label>
                        </div>
                    </div>
                    <div class="form-group collapse estiametion-mode" id="divAlleyWidth4">
                        <label class="control-label col-lg-6 col-md-6 col-sm-6"><span class="text-error">*</span> Lần rẽ thứ 4 rộng:</label>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.AlleyWidth4, new { Class = "form-control AutoFloat3", required = "required" })
                                <span class="input-group-addon">m</span>
                            </div>
                            @Html.ValidationMessageFor(m => m.AlleyWidth4, "*")
                            <label for="AlleyWidth4" class="text-error collapse">Vui lòng nhập</label>
                        </div>
                    </div>
                    <div class="form-group collapse estiametion-mode" id="divAlleyWidth5">
                        <label class="control-label col-lg-6 col-md-6 col-sm-6"><span class="text-error">*</span> Lần rẽ thứ 5 rộng:</label>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.AlleyWidth5, new { Class = "form-control AutoFloat3", required = "required" })
                                <span class="input-group-addon">m</span>
                            </div>
                            @Html.ValidationMessageFor(m => m.AlleyWidth5, "*")
                            <label for="AlleyWidth5" class="text-error collapse">Vui lòng nhập</label>
                        </div>
                    </div>
                    <div class="form-group collapse estiametion-mode" id="divAlleyWidth6">
                        <label class="control-label col-lg-6 col-md-6 col-sm-6"><span class="text-error">*</span> Lần rẽ thứ 6 rộng:</label>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.AlleyWidth6, new { Class = "form-control AutoFloat3", required = "required" })
                                <span class="input-group-addon">m</span>
