{
    DateTime commentDate = (DateTime)comment.CommentDateUtc;
    <span class="text-muted">@T("vào") <abbr class="timeago" title="@(commentDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss"))">@(commentDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss"))</abbr></span>
}
