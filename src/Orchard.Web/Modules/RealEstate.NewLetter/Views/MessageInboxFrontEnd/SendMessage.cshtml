@{
    Layout.Title = T("Soạn tin nhắn mới").ToString();
}

<article class="content-item block_controlpanel">
    <header>
        <div class="header-wrapper">
            <div class="header-title">
                <div class="header-title-left">
                    <div class="header-title-triangle"></div>
                </div>
                <h2 class="header-title-text">Soạn tin nhắn mới</h2>
                <div class="header-title-right"></div>
            </div>
        </div>
    </header>
    <article class="message-content">
        @using (Html.BeginFormAntiForgeryPost())
        {
            @Html.ValidationSummary()
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-3 col-xs-3">@T("Tiêu đề:")</label>
                    <div class="col-md-9 col-xs-9">
                        <input type="text" name="Title" id="Title" class="form-control" required="required"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-xs-3">@T("Nội dung:")</label>
                    <div class="col-md-9 col-xs-9">
                        <textarea name="Content" id="Content" rows="10" class="form-control" required="required"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-xs-3">&nbsp;</label>
                    <div class="col-md-9 col-xs-9">
                        <button type="submit" name="Submit.Reply" class="btn btn-default" value="@T("Gửi")">@T("Gửi")</button>
                    </div>
                </div>
            </div>
        }
    </article>
</article>