@using RealEstateForum.Service.ViewModels
@model ThreadAdminEditViewModel

<fieldset>
    @Html.LabelFor(m => m.Name, T("Chuyên mục"))
    @Html.DropDownListFor(m => m.ThreadId,
                    Model.ListThread.Select(s => new SelectListItem
                    {
                        Selected = s.Id == Model.ThreadId,
                        Text = s.Name,
                        Value = s.Id.ToString()
                    }), new {  })
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Name, T("Tên chuyên đề"))
    @Html.TextBoxFor(m => m.Name, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m => m.Name, "*")
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.ShortName, T("ShortName"))
    @Html.TextBoxFor(m => m.ShortName, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m => m.ShortName, "*")
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Description, T("Mô tả"))
    @Html.TextAreaFor(m => m.Description, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m => m.Description, "*")
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.SeqOrder, T("Sắp xếp"))
    @Html.TextBoxFor(m => m.SeqOrder, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m => m.SeqOrder, "*")
</fieldset>