@model RealEstateForum.Service.ViewModels.AdsPriceConfigCreateViewModel

<fieldset>
    @Html.LabelFor(m => m.Price, T("Nhập Giá:"))
    @Html.TextBoxFor(m => m.Price, new { @class = "textMedium", @placeholder = "VD: 2 triệu/tuần, 500k/tuần" })
    @Html.ValidationMessageFor(m => m.Price, "*")
</fieldset>

<fieldset>
    @Html.LabelFor(m => m.CssClass, T("CssClass"))
    @Html.TextBoxFor(m => m.CssClass, new { @class = "textMedium", @placeholder = "VD: banner-top, banner-sidbar" })
    @Html.ValidationMessageFor(m => m.CssClass, "*")
</fieldset>

<script type="text/javascript">
    $(function () {
        $('[name="submit.SaveReturn"],[name="submit.Back"]').insertAfter('fieldset.save-button button[name="submit.Save"]').css('margin-left', '4px');
    });
</script>
