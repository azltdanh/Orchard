@model RealEstate.ViewModels.ApartmentBlockInfoEditViewmodel

<fieldset>
    @Html.LabelFor(m => m.ApartmentName, T("Tên từng căn hộ"))
    @Html.TextBoxFor(m => m.ApartmentName, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m => m.ApartmentName, "*")
    @Html.HiddenFor(r => r.ApartmentBlockId)
</fieldset>
<fieldset>
    <label>Avatar</label>
    <input type="file" name="AvatarFile" />
</fieldset>
<fieldset>
    <img src="@Model.Avatar" style="border: 1px solid #ccc; padding: 2px;" />
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.ApartmentArea, T("Diện tích (m2)"))
    @Html.TextBoxFor(m => m.ApartmentArea, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m => m.ApartmentArea, "*")
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.RealAreaUse, T("Diện tích thông thủy(m2)"))
    @Html.EditorFor(m => m.RealAreaUse)
    @Html.ValidationMessageFor(m => m.RealAreaUse, "*")
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.ApartmentBedrooms, T("Số phòng ngủ"))
    @Html.TextBoxFor(m => m.ApartmentBedrooms, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m => m.ApartmentBedrooms, "*")
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.ApartmentBathrooms, T("Số WC"))
    @Html.TextBoxFor(m => m.ApartmentBathrooms, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m => m.ApartmentBathrooms, "*")
</fieldset>
