    @Html.LabelFor(m => m.PriceAverage, T("Giá trung bình (triệu đồng/m2)"))
    @Html.EditorFor(m => m.PriceAverage)
    @Html.ValidationMessageFor(m => m.PriceAverage, "*")
</fieldset>*@
<fieldset>
    @Html.LabelFor(m => m.OrtherContent, T("Nội dung khác"))
    @Html.TextAreaFor(m => m.OrtherContent)
    @Html.ValidationMessageFor(m => m.OrtherContent, "*")
</fieldset>

<div class="control-group">
    <label class="control-label">@T("Hình ảnh:")</label>
    <div class="controls">
        @Html.Partial("UploadImages", String.Empty) @*// String.Empty or uploadHandleUrl*@
    </div>
</div>

<!-- GalleryManager -->
@Html.Partial("GalleryManager", new RealEstate.ViewModels.PropertyImagesViewModel { Images = Model.Files, EnableEditImages = Model.EnableEditImages })

