@model RealEstate.ViewModels.PropertyAdvantageEditViewModel
<fieldset>
    @Html.LabelFor(m => m.Name, T("Name"))
    @Html.TextBoxFor(m=>m.Name, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m=>m.Name, "*")
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.ShortName, T("Type"))
    @*@Html.TextBoxFor(m => m.ShortName, new { @class = "textMedium" })*@
    @Html.DropDownListFor(m => m.ShortName,
        new List<SelectListItem>()
        {
            new SelectListItem{ Text="Advantages", Value="adv", Selected = (Model.ShortName == "adv")},
            new SelectListItem{ Text="DisAdvantages", Value="disadv", Selected = (Model.ShortName == "disadv")},
            new SelectListItem{ Text="ApartmentAdvantages", Value="apartment-adv", Selected = (Model.ShortName == "apartment-adv")},
            new SelectListItem{ Text="ApartmentInteriorAdvantages", Value="apartment-interior-adv", Selected = (Model.ShortName == "apartment-interior-adv")},
            new SelectListItem{ Text="ConstructionAdvantages", Value="construction-adv", Selected = (Model.ShortName == "construction-adv")}
        }, new{})
    @Html.ValidationMessageFor(m=>m.ShortName, "*")
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.AddedValue, T("AddedValue"))
    @Html.TextBoxFor(m => m.AddedValue, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m => m.AddedValue, "*")
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.CssClass, T("CssClass"))
    @Html.TextBoxFor(m => m.CssClass, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m => m.CssClass, "*")
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.SeqOrder, T("SeqOrder"))
    @Html.TextBoxFor(m=>m.SeqOrder, new { @class = "textMedium" })
    @Html.ValidationMessageFor(m=>m.SeqOrder, "*")
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.IsEnabled, T("IsEnabled"))
    @Html.EditorFor(m => m.IsEnabled)
    @Html.ValidationMessageFor(m=>m.IsEnabled, "*")
</fieldset>