@{
    Layout.Title = T("Thêm giao dịch").ToString();
}

@using (Html.BeginFormAntiForgeryPost(null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    <div class="save-button">
        <button value="submit.Save" name="submit.Save" amountnotnumber type="submit" class="primaryAction">Save</button>
        @Html.ActionLink(T("Trở lại").ToString(), "Index", new { }, new { @class = "button primaryAction" })
    </div>
    // Model is a Shape, calling Display() so that it is rendered using the most specific template for its Shape type
    @Display(Model)
}
<script type="text/javascript">
    $(function () {
        $('button[name="submit.SaveContinue"]').clone().insertAfter('fieldset.save-button button[name="submit.Save"]').css('margin-left', '4px');
    });
</script>
